{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/LucaFinancial/LucaSchema/main/src/schemas/lucaSchema.json",
  "title": "Luca Schema",
  "description": "Schema for the luca ledger",
  "type": "object",
  "required": [
    "schemaVersion",
    "categories",
    "accounts",
    "statements",
    "recurringTransactions",
    "recurringTransactionEvents",
    "transactions",
    "transactionSplits"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Schema version of the luca ledger"
    },
    "categories": {
      "type": "array",
      "description": "List of categories",
      "uniqueItems": true,
      "items": {
        "$ref": "./category.json"
      }
    },
    "accounts": {
      "type": "array",
      "description": "List of accounts",
      "uniqueItems": true,
      "items": {
        "$ref": "./account.json"
      }
    },
    "statements": {
      "type": "array",
      "description": "List of statements",
      "uniqueItems": true,
      "items": {
        "$ref": "./statement.json"
      }
    },
    "recurringTransactions": {
      "type": "array",
      "description": "List of recurring transactions",
      "uniqueItems": true,
      "items": {
        "$ref": "./recurringTransaction.json"
      }
    },
    "recurringTransactionEvents": {
      "type": "array",
      "description": "List of recurring transaction events",
      "uniqueItems": true,
      "items": {
        "$ref": "./recurringTransactionEvent.json"
      }
    },
    "transactions": {
      "type": "array",
      "description": "List of transactions",
      "uniqueItems": true,
      "items": {
        "$ref": "./transaction.json"
      }
    },
    "transactionSplits": {
      "type": "array",
      "description": "List of transaction splits",
      "uniqueItems": true,
      "items": {
        "$ref": "./transactionSplit.json"
      }
    }
  }
}
