{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/LucaFinancial/LucaSchema/main/src/schemas/category.json",
  "title": "Category",
  "description": "Defines the schema for categories.",
  "type": "object",
  "allOf": [
    {
      "$ref": "./common.json"
    }
  ],
  "properties": {
    "slug": {
      "type": "string",
      "title": "Slug",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "description": "URL-friendly identifier in kebab-case"
    },
    "name": {
      "type": "string",
      "title": "Category Name",
      "description": "The name of the category."
    },
    "parentId": {
      "type": ["string", "null"],
      "title": "Parent Category ID",
      "format": "uuid",
      "description": "The identifier of the parent category, if any. Null if the category is top-level."
    }
  },
  "required": ["slug", "name", "parentId"]
}
