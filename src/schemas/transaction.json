{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/LucaFinancial/LucaSchema/main/src/schemas/transaction.json",
  "title": "Transaction",
  "type": "object",
  "additionalProperties": false,
  "allOf": [
    {
      "$ref": "./common.json"
    },
    {
      "$ref": "./transaction-common.json"
    },
    {
      "properties": {
        "date": {
          "type": "string",
          "title": "Transaction Date",
          "format": "date",
          "description": "The date the transaction took place."
        },
        "transactionState": {
          "type": "string",
          "title": "Transaction State",
          "enum": [
            "PLANNED",
            "SCHEDULED",
            "PENDING",
            "COMPLETED",
            "CANCELLED",
            "FAILED",
            "DISPUTED",
            "REFUNDED",
            "TENTATIVE",
            "UPCOMING",
            "DELETED"
          ],
          "description": "The current state of the transaction."
        }
      }
    }
  ],
  "required": ["date", "transactionState"]
}
