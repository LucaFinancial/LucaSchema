{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/LucaFinancial/LucaSchema/main/src/schemas/transaction.json",
  "title": "Transaction",
  "type": "object",
  "allOf": [
    {
      "$ref": "./common.json"
    }
  ],
  "properties": {
    "accountId": {
      "type": "string",
      "title": "Account ID",
      "format": "uuid",
      "description": "ID of the account this transaction belongs to"
    },
    "date": {
      "type": "string",
      "title": "Date",
      "format": "date",
      "description": "Date of the transaction in YYYY-MM-DD format"
    },
    "amount": {
      "type": "number",
      "title": "Amount",
      "description": "Transaction amount (can be positive or negative)"
    },
    "description": {
      "type": "string",
      "title": "Description",
      "minLength": 1,
      "description": "Description of the transaction"
    },
    "categoryId": {
      "type": ["string", "null"],
      "title": "Category ID",
      "format": "uuid",
      "description": "Category UUID for this transaction"
    },
    "transactionState": {
      "type": "string",
      "title": "Transaction State",
      "enum": [
        "PLANNED",
        "SCHEDULED",
        "PENDING",
        "COMPLETED",
        "CANCELLED",
        "FAILED",
        "DISPUTED",
        "REFUNDED",
        "TENTATIVE",
        "UPCOMING",
        "DELETED"
      ],
      "description": "The current state of the transaction."
    }
  },
  "required": ["accountId", "date", "amount", "description", "transactionState"]
}
