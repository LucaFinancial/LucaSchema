{
  "name": "@luca-financial/luca-schema",
  "version": "2.0.0",
  "description": "Schemas for the Luca Ledger application",
  "author": "Johnathan Aspinwall",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "homepage": "https://lucaledger.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/LucaFinancial/LucaSchema"
  },
  "bugs": {
    "url": "https://github.com/LucaFinancial/LucaSchema/issues"
  },
  "keywords": [
    "schema",
    "validation",
    "finance",
    "transactions",
    "typescript"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testMatch": [
      "**/src/tests/**/*.test.[jt]s"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm generate:types && node scripts/build.js",
    "clean": "rimraf dist coverage",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit --allowJs --resolveJsonModule",
    "precommit": "lint-staged",
    "validate": "pnpm lint && pnpm test && pnpm build",
    "prepublishOnly": "pnpm validate && pnpm build",
    "generate:types": "node scripts/generate-types.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.1.1",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.51.0"
  },
  "packageManager": "pnpm@10.27.0"
}
