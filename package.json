{
  "name": "@luca-financial/luca-schema",
  "version": "2.0.0",
  "description": "Schemas for the Luca Ledger application",
  "author": "Johnathan Aspinwall",
  "main": "dist/cjs/index.js",
  "license": "MIT",
  "type": "module",
  "types": "./dist/cjs/index.d.ts",
  "homepage": "https://lucaledger.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/LucaFinancial/LucaSchema"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testMatch": [
      "**/src/tests/**/*.test.[jt]s"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ]
  },
  "scripts": {
    "build": "yarn && yarn clean && node scripts/build.mjs && babel src --out-dir dist/cjs --source-maps --ignore 'src/examples/**','src/tests/**'",
    "clean": "rimraf dist",
    "lint": "prettier --check . && eslint .",
    "publish-beta": "yarn && yarn build && yarn publish --tag beta --access public",
    "test": "yarn build && jest"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.1.1",
    "@types/jest": "^29.5.14",
    "babel-jest": "^29.7.0",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fs-extra": "^11.2.0",
    "globals": "^15.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
